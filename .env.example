# Bybit API Credentials
# Get these from your Bybit Account -> API Management
BYBIT_API_KEY=your_api_key_here
BYBIT_API_SECRET=your_api_secret_here

# Set to True for Testnet (demo trading), False for Real Trading (Mainnet)
# Since you have real order history, set this to False.
BYBIT_TESTNET=False

# Trading Configuration
# Comma-separated list of symbols (e.g., BTCUSDT,ETHUSDT)
TRADING_SYMBOLS=["BTCUSDT","ETHUSDT","SOLUSDT","XRPUSDT","ADAUSDT","DOGEUSDT"]

# Active Strategies to run
ACTIVE_STRATEGIES=["MACD_Trend", "RSI_Reversion"]

# System Configuration
LOG_LEVEL=INFO
# Environment: development or production
ENVIRONMENT=development

# Risk Management
MAX_DAILY_LOSS=20.0
MAX_POSITION_SIZE=50.0
MAX_LEVERAGE=3.0
INITIAL_DEPOSIT=186.0

# AI / LLM Configuration (Optional)
# If using DeepSeek or other LLMs for sentiment analysis
LLM_API_KEY=
LLM_BASE_URL=https://api.deepseek.com/v1
LLM_MODEL=deepseek-chat

# Simulation Mode
# Set to True to use internal simulator (paper trading)
# Set to False to connect to Bybit for live data or real trading
SIMULATION_MODE=False
INITIAL_CAPITAL=10000.0

# Other Settings
ENABLE_ML=True
AUDIT_ENABLED=True
DATABASE_URL=sqlite:///storage/data.db
TZ=Europe/Moscow

# Telegram Notifications
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# On-chain Analysis (Optional)
COINGECKO_API_KEY=
MESSARI_API_KEY=
