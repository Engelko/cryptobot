# ============================================
# CRYPTOBOT CONFIGURATION
# ============================================
# SECURITY WARNING: This file contains sensitive credentials.
# - NEVER commit this file with real credentials to version control
# - Use Docker secrets or environment variables in production
# - Rotate API keys if they have been exposed
# ============================================

# ============================================
# BYBIT API CREDENTIALS
# ============================================
# Get these from: Bybit Account -> API Management
# IMPORTANT: Enable only necessary permissions (read + trade, NO withdraw)
BYBIT_API_KEY=your_api_key_here
BYBIT_API_SECRET=your_api_secret_here

# Set to True for Testnet (demo trading), False for Mainnet (real trading)
# RECOMMENDED: Always test on Testnet first!
BYBIT_TESTNET=True

# ============================================
# TRADING CONFIGURATION
# ============================================
# Symbols to trade (JSON array format)
# NOTE: XRPUSDT is excluded due to systematic losses
TRADING_SYMBOLS=["BTCUSDT","ETHUSDT","SOLUSDT","ADAUSDT","DOGEUSDT"]

# Active strategies (see strategies.yaml for full config)
ACTIVE_STRATEGIES=["GoldenCross","BollingerRSI"]

# ============================================
# RISK MANAGEMENT (CRITICAL)
# ============================================
# Maximum daily loss before trading stops (USDT)
MAX_DAILY_LOSS=50.0

# Maximum position size per trade (USDT)
MAX_POSITION_SIZE=100.0

# Maximum single trade loss before rejection (USDT)
MAX_SINGLE_TRADE_LOSS=30.0

# Maximum leverage (will be capped even if strategy requests higher)
MAX_LEVERAGE=3.0

# Allow strategies to specify leverage above MAX_LEVERAGE
# WARNING: Set to False for safety
DYNAMIC_LEVERAGE_ENABLED=false

# Initial deposit for drawdown calculations (0 = auto-detect from balance)
INITIAL_DEPOSIT=0.0

# ============================================
# SYSTEM CONFIGURATION
# ============================================
LOG_LEVEL=INFO
ENVIRONMENT=development

# Simulation Mode (paper trading)
# True = no real orders, False = real trading
SIMULATION_MODE=False
INITIAL_CAPITAL=1000.0

# Machine Learning
ENABLE_ML=False

# Audit logging
AUDIT_ENABLED=True

DATABASE_URL=sqlite:///storage/data.db
TZ=Europe/Moscow

# ============================================
# TELEGRAM NOTIFICATIONS (Optional)
# ============================================
# Get bot token from @BotFather on Telegram
# Get chat ID by messaging @userinfobot
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# ============================================
# ON-CHAIN ANALYSIS (Optional)
# ============================================
# CoinGecko API (free tier available)
COINGECKO_API_KEY=

# Messari API (free tier available)
MESSARI_API_KEY=

# On-chain filtering (can block many signals)
ENABLE_ONCHAIN_FILTER=False
ONCHAIN_BUY_THRESHOLD=0.3
ONCHAIN_SELL_THRESHOLD=0.7

# ============================================
# AI/LLM INTEGRATION (Optional)
# ============================================
LLM_API_KEY=
LLM_BASE_URL=https://api.deepseek.com/v1
LLM_MODEL=deepseek-chat
